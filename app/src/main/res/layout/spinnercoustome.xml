<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="300dp"
    android:background="@drawable/roundedrectangleshape">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#16060606"
        android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/anniversaryicon"
            android:layout_marginLeft="12dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00fffefe"
        android:text="Anniversary"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#5aa1ea"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#16060606"
        android:gravity="center"
        android:layout_marginTop="2dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bdayicon"
            android:layout_marginLeft="12dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00fffefe"
            android:text="Birthday"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#5aa1ea"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#16060606"
        android:gravity="center"
        android:layout_marginTop="2dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/anniversaryicon"
            android:layout_marginLeft="12dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00fffefe"
            android:text="Meeting"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#5aa1ea"
            />
    </LinearLayout>

</LinearLayout>